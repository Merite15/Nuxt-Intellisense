{
  "name": "nuxt-intellisense",
  "license": "MIT",
  "displayName": "Nuxt Intellisense",
  "description": "Displays references to components, composables, and other exports used in your Nuxt 3 files.",
  "version": "0.3.0",
  "publisher": "MeriteK",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "nuxt",
    "nuxt3",
    "vue",
    "codelens",
    "components",
    "composables",
    "plugins",
    "middleware",
    "pages",
    "layouts",
    "stores",
    "auto-import",
    "intellisense",
    "typescript",
    "javascript",
    "vue3",
    "vuejs",
    "vuejs3"
  ],
  "icon": "images/logo.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Merite15/Nuxt-Intelliphense"
  },
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "nuxt-intellisense",
      "properties": {
        "nuxt-intellisense.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodeLens for Nuxt 3"
        },
        "nuxt-intellisense.showComposables": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for composables"
        },
        "nuxt-intellisense.showComponents": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for components"
        },
        "nuxt-intellisense.showPlugins": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for plugins"
        },
        "nuxt-intellisense.showMiddleware": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for middleware"
        },
        "nuxt-intellisense.showLayouts": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for layouts"
        },
        "nuxt-intellisense.showStores": {
          "type": "boolean",
          "default": true,
          "description": "Show CodeLens for stores"
        },
        "nuxt-intellisense.cacheUpdateInterval": {
          "type": "number",
          "default": 30000,
          "description": "Cache update interval in milliseconds"
        }
      }
    },
    "commands": [
      {
        "command": "nuxt-intellisense.refreshAutoImportCache",
        "title": "Nuxt Intellisense: Refresh auto-import cache"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.22.0",
    "glob": "^10.3.10",
    "mocha": "^10.0.0",
    "typescript": "^5.8.3"
  }
}
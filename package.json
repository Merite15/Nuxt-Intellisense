{
  "name": "nuxt-intellisense",
  "displayName": "Nuxt intellisense",
  "description": "Affiche les références des composants, composables etc... utilisés dans vos fichiers  Nuxt 3.",
  "version": "0.1.0",
  "publisher": "merite-k",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Snippets",
    "Other"
  ],
  "keywords": [
    "nuxt",
    "nuxt3",
    "vue",
    "codelens",
    "components",
    "composables",
    "plugins",
    "middleware",
    "pages",
    "layouts",
    "stores",
    "auto-import",
    "intellisense",
    "typescript",
    "javascript",
    "vue3",
    "vuejs",
    "vuejs3"
  ],
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Merite15/Nuxt-Intelliphense"
  },
  "activationEvents": [
    "onLanguage:vue",
    "onLanguage:typescript",
    "onLanguage:javascript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "nuxt-intellisense",
      "properties": {
        "nuxt-intellisense.enable": {
          "type": "boolean",
          "default": true,
          "description": "Activer/désactiver les CodeLens pour Nuxt 3"
        },
        "nuxt-intellisense.showComposables": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les composables"
        },
        "nuxt-intellisense.showComponents": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les composants"
        },
        "nuxt-intellisense.showPlugins": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les plugins"
        },
        "nuxt-intellisense.showMiddleware": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les middleware"
        },
        "nuxt-intellisense.showLayouts": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les layouts"
        },
        "nuxt-intellisense.showStores": {
          "type": "boolean",
          "default": true,
          "description": "Afficher les CodeLens pour les stores"
        },
        "nuxt-intellisense.cacheUpdateInterval": {
          "type": "number",
          "default": 30000,
          "description": "Intervalle de mise à jour du cache en millisecondes"
        }
      }
    },
    "commands": [
      {
        "command": "nuxt-intellisense.refreshAutoImportCache",
        "title": "Nuxt Intellisense: Actualiser le cache des auto-importations"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.60.0",
    "@vscode/test-electron": "^2.1.5",
    "@vscode/vsce": "^2.22.0",
    "glob": "^10.3.10",
    "mocha": "^10.0.0",
    "typescript": "^5.8.3"
  }
}